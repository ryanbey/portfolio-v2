---
// @ts-nocheck
import { Button, IconButton } from ".";
import gitHubIcon from "../assets/icons/github-logo.svg";
import linkedInIcon from "../assets/icons/linkedin-logo.svg";
import contactIcon from "../assets/icons/mail.svg";

const { compact } = Astro.props;
---

<div class={compact ? 'social-container' : 'social-container gap'}>
  {compact ? (
    <IconButton 
      icon={contactIcon}
      title="Contact"
      emphasis="low"
      to="/contact"
      client:load
    />
    <IconButton 
      icon={gitHubIcon}
      title="GitHub"
      emphasis="low"
      to="https://github.com/ryanbey"
      target="_blank"
      client:load
    />
    <IconButton
      icon={linkedInIcon}
      title="LinkedIn"
      emphasis="low"
      to="https://linkedin.com/in/ryanbey"
      target="_blank"
      client:load
    />
  ) : (
    <Button
      icon={gitHubIcon}
      emphasis="medium"
      to="https://github.com/ryanbey"
      target="_blank"
      client:load
    >
      GitHub
    </Button>
    <Button
      icon={linkedInIcon}
      emphasis="medium"
      to="https://linkedin.com/in/ryanbey"
      target="_blank"
      client:load
    >
      LinkedIn
    </Button>
  )}
</div>

<style>
  .social-container {
    display: flex;
    gap: 7px;
  }

  @media(max-width: 350px) {
    .social-container {
      gap: 0px;
    }
  }
  
  .gap {
    gap: 12px;
  }
</style>
