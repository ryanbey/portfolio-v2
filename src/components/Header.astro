---
import { Bleed, Navigation, Social } from ".";
---

<header>
  <a href="/"><p>ryanbey.dev</p></a>
  <Navigation client:load transition:persist />
  <Bleed sides={8}>
    <Social compact />
  </Bleed>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    background: linear-gradient(to bottom, var(--background) 70%, #ffffff00);
    z-index: 10;
    padding-bottom: 20px;
  }

  p {
    font-size: 20px;
    font-weight: 700;
  }
</style>
