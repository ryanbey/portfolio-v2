---
// @ts-nocheck
import { Bleed, MobileNavigation, Navigation, SiteName, Social } from ".";
const { pathname } = Astro.url
---

<header>
  <div class="header-content">
    <div class="left-nav">
      <MobileNavigation pathname={pathname} client:load />
      <SiteName />
    </div>
    <Navigation pathname={pathname} client:load transition:persist />
    <Bleed sides={8}>
      <Social compact />
    </Bleed>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    background: linear-gradient(to bottom, var(--background) 70%, #ffffff00);
    padding-bottom: 15px;
    z-index: 1;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: var(--content-padding)
  }

  .site-name-container {
    margin: 20px 0;
  }

  .left-nav {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  p {
    font-size: 20px;
    font-weight: 700;
  }
</style>
