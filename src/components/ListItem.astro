---
const { description, imageUrl, title } = Astro.props;
---

<div class="list-item-container">
  {imageUrl && <img class="list-item-image" src={imageUrl} alt={`${title} logo`} />}
  <div>
    <h3 class="list-item-title">{title}</h3>
    <p class="list-item-description">{description}</p>
  </div>
</div>

<style>
  .list-item-container {
    display: flex;
    align-items: center;
    gap: 12px;

    & > * p {
      margin: 0px;
    }
  }

  .list-item-image {
    border-radius: 6px;
    height: 44px;
    width: 44px;
    background: var(--text-primary);
  }

  .list-item-title {
    font-size: 20px;
    font-weight: 700;
    margin: 0;
    margin-bottom: 4px;
  }

  .list-item-description {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0px;
  }
</style>
