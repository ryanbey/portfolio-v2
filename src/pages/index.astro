---
// @ts-nocheck
import { BaseLayout } from "../layouts";
import { Bleed, Button, Greeting, SkillChip } from "../components";
---

<BaseLayout pageTitle="Home">
	<div class="home-container">
		<Greeting />
		<div class="home-right">
			<h2>Experience</h2>
			<Bleed sides={16}>
				<div class="experience-container">
					<div class="company-container">
						<img
							class="company-image"
							src="https://via.placeholder.com/50x50"
							alt="alt"
						/>
						<div class="title">
							<p class="company">FamilySearch</p>
							<p class="position">Web Developer II</p>
						</div>
						<p class="tenure">Jan 2021 â€” Present</p>
					</div>
					<p class="description">
						Hello this is a paragraph all about this experience I have. Hello
						this is a paragraph all about this experience I have. Hello this is
						a paragraph all about this experience I have.
					</p>
					<p class="description">
						Hello this is a paragraph all about this experience I have. Hello
						this is a paragraph all about this experience I have.
					</p>
					<div class="skill-chips-container">
						<SkillChip text="React" />
						<SkillChip text="JavaScript" />
						<SkillChip text="CSS" />
						<SkillChip text="Jest" />
						<SkillChip text="Storybook" />
					</div>
				</div>
			</Bleed>
		</div>
	</div>
</BaseLayout>

<style lang="scss">
	.home-container {
		display: flex;
		justify-content: space-between;
		gap: 150px;
		padding-top: 60px;
	}

	.home-right {
		width: 100%;
	}

	.experience-container {
		padding: 16px;
		border-radius: var(--border-rad);
		transition: 250ms ease;

		&:hover {
			background: var(--foreground-transparent);
		}
	}

	.company-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 16px;

		& > * p {
			margin: 0px;
		}
	}

	.title {
		flex-grow: 1;
	}

	.company {
		font-size: 20px;
		font-weight: 700;
		margin-bottom: 4px !important;

		&-image {
			border-radius: 6px;
		}
	}

	.position {
		font-size: 16px;
	}

	.description {
		line-height: 140%;
	}

	.tenure {
		font-size: 14px;
		align-self: flex-start;
		color: var(--text-secondary);
		margin: 0px;
	}

	.skill-chips-container {
		display: flex;
		flex-wrap: wrap;
		gap: 6px;
	}
</style>
