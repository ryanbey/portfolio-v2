---
// @ts-nocheck
import { BaseLayout } from "../layouts";
import {
	Button,
	Greeting,
	HomeSection,
	SkillChipList,
	Spacer,
} from "../components";
import { allSkills, experience, projects, education } from "../data";
import arrowRight from '../assets/icons/arrow-right.png'
---

<BaseLayout
	pageTitle="Hi, I'm Ryan. This is my Portfolio."
	pageDescription="Detail-oriented and UX-driven web developer passionate about creating practical user experiences and writing beautiful code."
	noSuffix
	showFAB
>
	<Greeting />
	<Spacer size="xl"/>
	<div class="desktop-layout">
		<div class="desktop-left">
			<HomeSection title="Experience" data={experience} />
			<div class="education-desktop">
				<HomeSection title="Education" data={education} />
			</div>
		</div>
		<div class="desktop-right">
			<HomeSection title="Projects" data={projects.slice(0, 3)} />
			<Button icon={arrowRight} emphasis="medium" to="/projects" iconRight client:load>
				All Projects
			</Button>
			<div class="education-mobile">
				<Spacer size="sm" />
				<HomeSection title="Education" data={education} />
			</div>
		</div>
	</div>
</BaseLayout>

<style lang="scss">
	.education {
		&-mobile {
			display: block;
		}

		&-desktop {
			display: none;
		}
	}

	@media (min-width: 850px) {
		.desktop-layout {
			display: flex;
			flex-direction: row;
			gap: 86px;
		}

		.desktop-left, .desktop-right {
			width: 100%;
		}

		.education {
			&-mobile {
				display: none;
			}
			
			&-desktop {
				display: block;
			}
		}
	}
</style>
