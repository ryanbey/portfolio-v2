---
import { BaseLayout } from "../layouts";
---

<BaseLayout pageTitle="Home">
	<div class="home-container">
		<div class="home-left">
			<h1>Hi, I'm Ryan.</h1>
			<p>
				I'm a detail-oriented and UX-driven web developer passionate about
				creating practical user experiences and writing beautiful code.
			</p>
		</div>
		<div class="home-right">
			<div class="test"></div>
		</div>
	</div>
</BaseLayout>

<style>
	.home-container {
		display: flex;
		justify-content: space-between;
		gap: 100px;
		padding-top: 60px;
	}

	.home-left {
		position: sticky;
		top: 135px;
		height: 100%;
	}

	h1 {
		font-size: 60px !important;
		margin-top: 0px;
		margin-bottom: 4px;
	}

	p {
		font-size: 20px;
	}

	.home-right {
		width: 100%;
		height: 2000px;
		background: var(--foreground);
	}
</style>
