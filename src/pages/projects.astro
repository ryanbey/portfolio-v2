---
// @ts-nocheck
import { BaseLayout } from "../layouts";
import { Button, ProjectsSection, Spacer } from "../components";
import { projects, categories } from "../data";
---

<BaseLayout pageTitle="Projects">
  <div class="heading-container">
    <h1 class="page-heading">Projects</h1>
    <div class="filters-container">
      <Button emphasis="medium">Filter</Button>
      <Button emphasis="medium">Sort</Button>
    </div>
  </div>
  <h2 class="category-heading">Web</h2>
  <div class="projects-container">
    {projects.map((project) =>
      project.category === categories.web && (
        <ProjectsSection
          id={project.title.toLowerCase().replace(/ /g, "-")}
          project={project}
        />
      )
    )}
  </div>

  <h2 class="category-heading">Mobile</h2>
  {projects.map((project) =>
    project.category === categories.mobile && <h3>{project.title}</h3>,
  )}

  <h2 class="category-heading">Artwork</h2>
  {projects.map((project) =>
    project.category === categories.artwork && <h3>{project.title}</h3>,
  )}

  <p class="temp">
    <i>
      Don't forget to add tags for tech used like the home page and link to sites/repos.
      <br />
      Also probably show a tag to FamilySearch for projects completed there.
    </i>
  </p>

  <Spacer size="xxl" />
  <Spacer size="xxl" />
</BaseLayout>

<style lang="scss">
  .heading-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .filters-container {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .projects-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  .temp {
    background: var(--foreground-transparent);
    padding: 16px;
    border-radius: var(--border-rad);
    text-align: center;
    color: var(--text-secondary);
  }

  .page-heading {
    font-size: 36px;
  }

  .category-heading {
    font-size: 28px;
    font-weight: 600;
  }

  @media (max-width: 850px) {
    .projects-container {
      grid-template-columns: 1fr;
      gap: 12px;
    }
  }
</style>
